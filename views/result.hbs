<div class="card">
    <h1>{{title}}</h1>

    <div class="{{#if (eq action "success")}}ok{{else}}warn{{/if}}">{{note}}</div>

    <div class="grid">
        <div class="muted">Transaction ID</div><div>{{tx}}</div>
        <div class="muted">Status</div><div>{{status}}</div>
        <div class="muted">Provider</div><div>{{provider}}</div>
        <div class="muted">Amount</div><div>{{euro amount}}</div>
        <div class="muted">Reference</div><div>{{reference}}</div>
        <div class="muted">Stamp</div><div>{{stamp}}</div>
    </div>

    <div>
        {{#if (eq action "success")}}
            <a class="btn btn-primary" href="{{backUrl}}">← Назад в магазин</a>
        {{else}}
            {{#if retryUrl}}<a class="btn" href="{{retryUrl}}">Попробовать оплатить снова</a>{{/if}}
            <a class="btn" href="{{backUrl}}">← Назад в магазин</a>
        {{/if}}
    </div>
</div>
